{% set pageTitle = title or i18n[lang].home.title or i18n[lang].donate.title %}
{% set pageDesc = description or i18n[lang].home.description or i18n[lang].donate.description %}
<!DOCTYPE html>
<html lang="{{ lang or 'nl' }}">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#006D5B">
    <meta name="color-scheme" content="light">
    <title>{{ pageTitle }}</title>
    <meta name="description" content="{{ pageDesc }}">
    <link rel="canonical" href="{{ metadata.url }}{{ page.url }}">

    <!-- Alternate language links -->
    {% if lang == 'nl' %}
    <link rel="alternate" hreflang="en" href="{{ metadata.url }}/en{{ page.url }}">
    <link rel="alternate" hreflang="nl" href="{{ metadata.url }}{{ page.url }}">
    <link rel="alternate" hreflang="x-default" href="{{ metadata.url }}{{ page.url }}">
    {% else %}
    <link rel="alternate" hreflang="nl" href="{{ metadata.url }}{{ page.url | replace('/en/', '/') }}">
    <link rel="alternate" hreflang="en" href="{{ metadata.url }}{{ page.url }}">
    <link rel="alternate" hreflang="x-default" href="{{ metadata.url }}{{ page.url | replace('/en/', '/') }}">
    {% endif %}

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ metadata.url }}{{ page.url }}">
    <meta property="og:title" content="{{ pageTitle }}">
    <meta property="og:description" content="{{ pageDesc }}">
    <meta property="og:image" content="{{ metadata.url }}/images/alaa-met-groep-kinderen-syrie.png">
    <meta property="og:locale" content="{{ locale or 'nl_NL' }}">
    <meta property="og:site_name" content="{{ metadata.title }}">

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ pageTitle }}">
    <meta name="twitter:description" content="{{ pageDesc }}">
    <meta name="twitter:image" content="{{ metadata.url }}/images/alaa-met-groep-kinderen-syrie.png">

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "NonprofitOrganization",
      "name": "Asia's Gift of Hope",
      "alternateName": "Stichting Asia's Gift of Hope",
      "url": "{{ metadata.url }}",
      "logo": "{{ metadata.url }}/apple-touch-icon.png",
      "description": "{{ metadata.description }}",
      "areaServed": {
        "@type": "Country",
        "name": "Syria"
      },
      "knowsLanguage": ["nl", "en"],
      "email": "info@asiasgiftofhope.nl"
    }
    </script>

    <!-- Favicon -->
    <link rel="icon" href="{{ '/favicon.ico' | url }}">
    <link rel="apple-touch-icon" href="{{ '/apple-touch-icon.png' | url }}">

    <!-- Font - Optimized async loading -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" media="print" onload="this.media='all'">
    <noscript>
      <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap">
    </noscript>

    <!-- Stylesheet -->
    <link rel="stylesheet" href="{{ '/style.css' | url }}">
  </head>
  <body>
    <!-- Skip to main content link for keyboard users -->
    <a href="#main-content" class="skip-link">
      {% if lang == 'en' %}Skip to main content{% else %}Ga naar hoofdinhoud{% endif %}
    </a>

    <!-- Header -->
    {% include "header.njk" %}

    <!-- Main Content -->
    <main id="main-content">
      {{ content | safe }}
    </main>

    <!-- Footer -->
    {% include "footer.njk" %}
  </body>
</html>
