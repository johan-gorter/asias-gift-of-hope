---
layout: base.njk
---
{% set t = i18n[lang].donate %}

<!-- Page Header -->
<section class="bg-hero-gradient text-white py-16">
  <div class="max-w-6xl mx-auto px-6 text-center">
    <h1 class="text-4xl md:text-5xl font-bold mb-4">{{ t.header.title }}</h1>
    <p class="text-xl opacity-90">
      {{ t.header.subtitle }}
    </p>
  </div>
</section>

<!-- Donation Section -->
<section class="py-16">
  <div class="max-w-6xl mx-auto px-6">
    <div class="grid md:grid-cols-2 gap-12">
      <!-- Donation Info -->
      <div>
        <h2 class="text-2xl font-bold mb-6 text-primary">{{ t.whereItGoes.title }}</h2>

        <div class="space-y-6">
          <div class="flex items-start space-x-4">
            <div class="icon-container w-12 h-12 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-lg">{{ t.whereItGoes.prosthetics.title }}</h3>
              <p class="text-theme-muted">{{ t.whereItGoes.prosthetics.description }}</p>
            </div>
          </div>

          <div class="flex items-start space-x-4">
            <div class="icon-container w-12 h-12 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-lg">{{ t.whereItGoes.babyFood.title }}</h3>
              <p class="text-theme-muted">{{ t.whereItGoes.babyFood.description }}</p>
            </div>
          </div>

          <div class="flex items-start space-x-4">
            <div class="icon-container w-12 h-12 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 15.546c-.523 0-1.046.151-1.5.454a2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.701 2.701 0 00-1.5-.454M9 6v2m3-2v2m3-2v2M9 3h.01M12 3h.01M15 3h.01M21 21v-7a2 2 0 00-2-2H5a2 2 0 00-2 2v7h18zm-3-9v-2a2 2 0 00-2-2H8a2 2 0 00-2 2v2h12z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-lg">{{ t.whereItGoes.foodPackages.title }}</h3>
              <p class="text-theme-muted">{{ t.whereItGoes.foodPackages.description }}</p>
            </div>
          </div>

          <div class="flex items-start space-x-4">
            <div class="icon-container w-12 h-12 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-lg">{{ t.whereItGoes.education.title }}</h3>
              <p class="text-theme-muted">{{ t.whereItGoes.education.description }}</p>
            </div>
          </div>

          <div class="flex items-start space-x-4">
            <div class="icon-container w-12 h-12 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-lg">{{ t.whereItGoes.housing.title }}</h3>
              <p class="text-theme-muted">{{ t.whereItGoes.housing.description }}</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Donation Form / Info -->
      <div>
        <div class="bg-white p-8 rounded-lg shadow-lg">
          <h2 class="text-2xl font-bold mb-6 text-primary">{{ t.form.title }}</h2>

          <div class="bg-secondary-light border border-secondary rounded-lg p-6 mb-6">
            <p class="text-theme font-semibold text-center">
              {{ t.form.comingSoon }}
            </p>
            <p class="text-theme-muted text-sm text-center mt-2">
              {{ t.form.comingSoonText }}
            </p>
          </div>

          <div class="text-center mb-6">
            <img
              src="/images/qr-code-donatie.png"
              alt="{{ t.form.qrAlt }}"
              class="mx-auto w-40 h-40 rounded-lg shadow"
            />
            <p class="text-theme-muted text-sm mt-2">{{ t.form.qrText }}</p>
          </div>

          <div class="border-t border-theme pt-6">
            <h3 class="font-semibold mb-4">{{ t.form.contactTitle }}</h3>
            <div class="space-y-2 text-theme-muted">
              <p>
                <strong>{{ t.form.email }}</strong>
                <a href="mailto:info@asiasgiftofhope.nl" class="text-primary hover:text-primary-dark">
                  info@asiasgiftofhope.nl
                </a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Impact Section -->
<section class="py-16 bg-theme-alt">
  <div class="max-w-6xl mx-auto px-6">
    <h2 class="text-3xl font-bold text-center mb-12 text-primary">{{ t.impact.title }}</h2>
    <div class="grid md:grid-cols-4 gap-8 text-center">
      <div class="card p-6">
        <div class="text-4xl font-bold text-secondary mb-2">14+</div>
        <p class="text-theme-muted">{{ t.impact.prosthetics }}</p>
      </div>
      <div class="card p-6">
        <div class="text-4xl font-bold text-secondary mb-2">50+</div>
        <p class="text-theme-muted">{{ t.impact.families }}</p>
      </div>
      <div class="card p-6">
        <div class="text-4xl font-bold text-secondary mb-2">100+</div>
        <p class="text-theme-muted">{{ t.impact.foodPackages }}</p>
      </div>
      <div class="card p-6">
        <div class="text-4xl font-bold text-secondary mb-2">20+</div>
        <p class="text-theme-muted">{{ t.impact.students }}</p>
      </div>
    </div>
  </div>
</section>

<!-- Trust Section -->
<section class="py-16 bg-theme">
  <div class="max-w-4xl mx-auto px-6 text-center">
    <h2 class="text-3xl font-bold mb-6 text-primary">{{ t.transparency.title }}</h2>
    <p class="text-theme-muted text-lg mb-8">
      {{ t.transparency.text }}
    </p>
    <div class="grid md:grid-cols-2 gap-8">
      <div class="card p-6">
        <img
          src="/images/voedselpakketten-samenstellen.png"
          alt="{{ t.transparency.image1Alt }}"
          class="w-full h-48 object-cover rounded-lg mb-4"
        />
        <p class="text-theme-muted text-sm">{{ t.transparency.image1Text }}</p>
      </div>
      <div class="card p-6">
        <img
          src="/images/schooltassen-en-spullen-voor-kinderen.png"
          alt="{{ t.transparency.image2Alt }}"
          class="w-full h-48 object-cover rounded-lg mb-4"
        />
        <p class="text-theme-muted text-sm">{{ t.transparency.image2Text }}</p>
      </div>
    </div>
  </div>
</section>
