---
layout: base.njk
---
{% set t = i18n[lang].home %}

<!-- Hero Section -->
<section class="relative overflow-hidden">
  <!-- Background image/video with 16:9 aspect ratio -->
  <div class="relative w-full aspect-video overflow-hidden">
    <div id="video-facade" class="absolute inset-0">
      <img
        src="/images/oorlogsschade-syrie-mensen-lopen-door-puin.png"
        alt="{{ t.hero.videoAlt }}"
        class="w-full h-full object-cover"
        fetchpriority="high"
      />
    </div>
    <!-- YouTube iframe container (hidden until interaction) -->
    <div id="video-container" class="absolute inset-0 hidden overflow-hidden">
      <iframe
        id="youtube-iframe"
        class="absolute inset-0 w-full h-full"
        src=""
        data-src="https://www.youtube-nocookie.com/embed/LymByDEqWkM?autoplay=1&mute=1&loop=1&playlist=LymByDEqWkM&controls=0&showinfo=0&rel=0&playsinline=1&modestbranding=1"
        frameborder="0"
        allow="autoplay; encrypted-media"
        allowfullscreen
        title="{{ t.hero.videoTitle }}"
        style="pointer-events: none;">
      </iframe>
    </div>
    <!-- Gradient overlay -->
    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent"></div>
    <!-- Text overlay at bottom -->
    <div class="absolute bottom-0 left-0 right-0 p-4 sm:p-8 text-white">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-xl sm:text-3xl md:text-5xl font-bold mb-2">
          {{ t.hero.title }}
        </h1>
        <p class="text-sm sm:text-lg md:text-xl opacity-90 mb-4">
          {{ t.hero.tagline }}
        </p>
        <a href="{{ ('/en/donate/') | url }}" class="btn-secondary inline-block px-6 py-3 sm:px-8 sm:py-4 rounded-lg font-semibold text-base sm:text-lg shadow-lg">
          {{ t.hero.cta }}
        </a>
      </div>
    </div>
  </div>
</section>


<!-- Lazy load video on user interaction -->
<script>
(function() {
  var loaded = false;
  function loadVideo() {
    if (loaded) return;
    loaded = true;
    var container = document.getElementById('video-container');
    var facade = document.getElementById('video-facade');
    var iframe = document.getElementById('youtube-iframe');
    if (iframe && container && facade) {
      iframe.src = iframe.dataset.src;
      container.classList.remove('hidden');
      facade.style.opacity = '0';
      facade.style.transition = 'opacity 0.5s';
    }
  }
  ['scroll', 'mousemove', 'touchstart', 'keydown'].forEach(function(e) {
    document.addEventListener(e, loadVideo, { once: true, passive: true });
  });
  setTimeout(loadVideo, 3000);
})();
</script>

<!-- Section Divider -->
<div class="section-divider"></div>

